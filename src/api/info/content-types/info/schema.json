{
  "kind": "collectionType",
  "collectionName": "infos",
  "info": {
    "singularName": "info",
    "pluralName": "infos",
    "displayName": "Info"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "dynamiczone",
      "components": [
        "shared.title",
        "shared.paragraph",
        "shared.media"
      ]
    },
    "BackgroundColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
